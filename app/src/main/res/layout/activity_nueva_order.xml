<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="DATOS DEL CLIENTE"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>

            <EditText
                android:id="@+id/cliente_et"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Nombres y Apellidos"/>

            <EditText
                android:id="@+id/direccion_et"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="DirecciÃ³n"/>

            <EditText
                android:id="@+id/referencia_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Referencia"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="DATOS DEL PEDIDO"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <EditText
                android:id="@+id/fecha_et"

                android:inputType="date"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Fecha"/>

            <EditText
                android:id="@+id/pedido_et"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Pedido" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:id="@+id/precio_et"
                    android:inputType="numberDecimal"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Precio" />

                <EditText
                    android:id="@+id/cantidad_et"
                    android:inputType="numberDecimal"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Cantidad" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="DATOS DEL PAGO"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/total_et"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Precio a pagar"/>

            <EditText
                android:id="@+id/tipoPago_et"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Forma de pago"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ESTADO DEL PEDIDO"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/estadoOrden_et"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Estado de pedido"/>
        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Guardar"
            android:textColor="@color/color_white"/>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>